#########################################
# WAZUH LLM ORCHESTRATION - CONFIGURATION
#########################################

# ============================================================================
# OPENAI LLM CONFIGURATION (REQUIRED)
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TIMEOUT=30

# ============================================================================
# MCP SERVER CONFIGURATION (REQUIRED)
# ============================================================================
# Your Wazuh MCP server endpoint
MCP_SERVER_URL=http://host.docker.internal:3000
MCP_CONNECTION_TIMEOUT=10
MCP_REQUEST_TIMEOUT=30
MCP_MAX_RETRIES=3

# ============================================================================
# BACKEND SERVICE CONFIGURATION
# ============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
FRONTEND_PORT=3001
VITE_API_URL=http://localhost:8000

# ============================================================================
# SESSION MANAGEMENT (IN-MEMORY)
# ============================================================================
SESSION_MAX_MESSAGES=10
SESSION_TIMEOUT_MINUTES=60
SESSION_CLEANUP_INTERVAL=15

# ============================================================================
# LLM ORCHESTRATION
# ============================================================================
MAX_TOOL_ITERATIONS=5
ENABLE_STREAMING=false

# ============================================================================
# GUARDRAILS
# ============================================================================
STRICT_GUARDRAILS=true

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# ============================================================================
# PERFORMANCE
# ============================================================================
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_PER_MINUTE=30
